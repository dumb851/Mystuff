<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <itemStuff name="colorPrimary">@color/colorPrimary</itemStuff>
        <itemStuff name="colorPrimaryDark">@color/colorPrimaryDark</itemStuff>
        <itemStuff name="colorAccent">@color/colorAccent</itemStuff>
    </style>

    <style name="AppTheme.NoActionBar">
        <itemStuff name="windowActionBar">false</itemStuff>
        <itemStuff name="windowNoTitle">true</itemStuff>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
